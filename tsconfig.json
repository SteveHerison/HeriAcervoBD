{
  "compilerOptions": {
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "strict": true,
    "esModuleInterop": true,
    "target": "es2021",
    "module": "commonjs",
    "outDir": "build",

    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["src", "server.ts"],
  "exclude": ["node_modules"]
}
